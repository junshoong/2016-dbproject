server {
        charset utf-8;
        listen 80;
        server_name dbp.harveyk.me;

        location = /favicon.ico { access_log off; log_not_found off; }

        location /static {
                alias /srv/static;
        }

        location /media {
                alias /srv/dbp/skhualumni/media;
        }

        location / {
                include proxy_params;
                proxy_pass http://unix:/srv/dbp.sock;
        }
}
